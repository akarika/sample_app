<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.nom, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    Posté <%= time_ago_in_words(micropost.created_at) %> ago.
    <% user = micropost.user rescue User.find(micropost.user_id)%>
    <% if current_user?(micropost.user) %>
    <%= link_to"Supprimer", micropost, method: :delete,
    data:{confirm:"Etes-vous sûre?"}%>
    <%end%>
  </span>
</li>
